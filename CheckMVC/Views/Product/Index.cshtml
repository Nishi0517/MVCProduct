@model List<CheckMVC.Models.tblProduct>   
@{
    ViewBag.Title = "Index";
}

<h2>List of all Products</h2>
<div class="container">
    <div class="row">
        <div class="col-md-12 text-right">

        <a href="@Url.Action("Create","Product")" class="btn btn-primary">Add New Product</a>
          
        </div>
    </div>
    <br />
        @*<div class="col-md-6">*@
            <table class="table table-bordered table-striped table-hover">
                <tr>
                    <th>Product Id</th>
                    <th>Product Name</th>
                    <th>Product Price</th>
                    <th>Product Qty</th>
                    <th>Product Image</th>
                    <th>Actions</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.prod_id</td>
                        <td>@item.prod_name</td>
                        <td>@item.prod_price</td>
                        <td>@item.prod_qty</td>
                        <td>
                            <img src="~/Content/Images/@item.prod_pic" alt="Alternate text" width="100" height="100" />
                        </td>
                        <td>
                            @*@Html.ActionLink("Edit", "Edit", "Product",new { @id=item.prod_id }, new { htmlAttributes = new { @class = "btn btn-success" } })*@
                            <a href="@Url.Action("Edit","Product",new { @id =item.prod_id })" class="btn btn-info">Edit</a>
                            <a href="@Url.Action("Delete","Product",new { @id = item.prod_id})" class="btn btn-danger" onclick="return confirm('Are you sure to delete @item.prod_name product?')">Delete</a>
                        </td>
                    </tr>
                }
            </table>
        @*</div>*@
    
</div>